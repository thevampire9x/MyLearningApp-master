<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#fafafa"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="THỜI KHOÁ BIỂU"
                android:fontFamily="@font/montserrat_light"
                android:textSize="20dp"
                android:textColor="#ff0000"
                />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="LỚP : "
                    android:fontFamily="@font/montserrat_light"
                    android:textColor="#ff0004"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_lop"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="101175"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="Năm học: "
                    android:fontFamily="@font/montserrat_light"
                    android:textColor="#ff0004"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_namhoc"
                    android:fontFamily="@font/montserrat_light"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="2020 - 2021"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="Kỳ học: "
                    android:fontFamily="@font/montserrat_light"
                    android:textColor="#ff0004"
                    android:textSize="15dp" />

                <Spinner
                    android:gravity="center"
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="left"
                    android:text="Tuần: "
                    android:fontFamily="@font/montserrat_light"
                    android:textColor="#ff0004"
                    android:textSize="15dp" />

                <Spinner
                    android:gravity="center"
                    android:id="@+id/sp_tuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_btn_login" />
            </LinearLayout>

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#03E0F4"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Thứ"
                android:textStyle="bold"
                android:textColor="#263238"
                android:textSize="10dp"
                android:fontFamily="@font/montserrat_light" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_light"
                android:gravity="center"
                android:text="Tên học phần"
                android:textColor="#263238"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="GVGD"
                android:textStyle="bold"
                android:textColor="#263238"
                android:textSize="10dp"
                android:fontFamily="@font/montserrat_light" />
            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Số TC"
                android:textStyle="bold"
                android:textColor="#263238"
                android:textSize="10dp"
                android:fontFamily="@font/montserrat_light"/>
            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Số tiết"
                android:textStyle="bold"
                android:textColor="#263238"
                android:fontFamily="@font/montserrat_light"
                android:textSize="10dp" />
            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Phòng"
                android:textStyle="bold"
                android:textColor="#263238"
                android:textSize="10dp"
                android:fontFamily="@font/montserrat_light">

            </TextView>

        </TableRow>

        <ListView
            android:id="@+id/lv_tkb"
            android:layout_width="match_parent"
            android:layout_height="432dp" />

    </LinearLayout>
</ScrollView>


