<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#fafafa"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="BẢNG ĐIỂM"
                android:fontFamily="@font/montserrat_light"
                android:textSize="20dp"
                android:textColor="#ff0000"
          />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="Họ và tên : "
                    android:fontFamily="@font/montserrat_light"
                    android:textColor="#ff0004"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_hoten"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Phùng Đức Huân"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="Mã sv: "
                    android:fontFamily="@font/montserrat_light"
                    android:textColor="#ff0004"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_msv"
                    android:fontFamily="@font/montserrat_light"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="10117263"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="Năm học: "
                    android:fontFamily="@font/montserrat_light"
                    android:textColor="#ff0004"
                    android:textSize="15dp" />

                <Spinner
                    android:gravity="center"
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="left"
                    android:text="Kỳ học: "
                    android:fontFamily="@font/montserrat_light"
                    android:textColor="#ff0004"
                    android:textSize="15dp" />

                <Spinner
                    android:gravity="center"
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_btn_login" />
            </LinearLayout>

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#03E0F4"
            android:orientation="horizontal"
            android:paddingTop="10dp">


            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_light"
                android:gravity="center"
                android:text="Tên học phần"
                android:textColor="#263238"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Số TC"
                android:textStyle="bold"
                android:textColor="#263238"
                android:textSize="10dp"
                android:fontFamily="@font/montserrat_light" />
            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Điểm QT"
                android:textStyle="bold"
                android:textColor="#263238"
                android:textSize="10dp"
                android:fontFamily="@font/montserrat_light"/>
            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Điểm KT"
                android:textStyle="bold"
                android:textColor="#263238"
                android:fontFamily="@font/montserrat_light"
                android:textSize="10dp" />
            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Điểm TB"
                android:textStyle="bold"
                android:textColor="#263238"
                android:textSize="10dp"
                android:fontFamily="@font/montserrat_light">

            </TextView>

        </TableRow>

        <ListView
            android:id="@+id/lv_bangdiem"
            android:layout_width="match_parent"
            android:layout_height="432dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:fontFamily="@font/montserrat_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="Điểm TB ="
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_Diem"
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:text="8.0"
                    android:textColor="#263238" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>


